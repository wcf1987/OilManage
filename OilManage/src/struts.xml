<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
	"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.multipart.saveDir" value="/upload"></constant>
	<!--指定action的扩展名 -->
	<package name="default" extends="struts-default">
		<action name="ice" class="cn.edu.cup.test.iceTest">
			<result name="SUCCESS">/test.jsp</result>
		</action>
	</package>
	<package name="json" extends="json-default">
		<action name="map" class="cn.edu.cup.map.action.MapAction">
			<result name="SUCCESS" type="json">
			 <param name="excludeProperties">id</param>
			</result>			
		</action>
		<action name="uploadMap" class="cn.edu.cup.map.action.UploadAction" method="uploadFile">
			<param name="savePath">/upload</param> 
			<result name="SUCCESS" type="json">
			
			 <param name="excludeProperties">id</param>
			</result>			
		</action>
		<action name="listMap" class="cn.edu.cup.map.action.MapListAction" method="list">
		
			<result name="SUCCESS" type="json">
			
			 <param name="excludeProperties">id</param>
			</result>			
		</action>
		<action name="viewMap" class="cn.edu.cup.map.action.MapListAction" method="viewMap">
			
			<result name="SUCCESS" type="json">
			
			 <param name="excludeProperties">id</param>
			</result>			
		</action>
				<action name="delMap" class="cn.edu.cup.map.action.MapListAction" method="delete">
			
			<result name="SUCCESS" type="json">
			
			</result>			
		</action>
		<action name="addMap" class="cn.edu.cup.map.action.MapListAction" method="add">
		
			<result name="SUCCESS" type="json">
			
			 <param name="excludeProperties">id</param>
			</result>			
		</action>
		<action name="testData" class="cn.edu.cup.map.action.TableAction">
			<result name="SUCCESS" type="json">
			</result>			
		</action>
		<action name="tableAdd" class="cn.edu.cup.map.action.TableAddAction">
			<result name="SUCCESS" type="json">				
			</result>			
		</action>
		<action name="tableDelete" class="cn.edu.cup.map.action.TableDeleteAction">
			<result name="SUCCESS" type="json">		
			</result>			
		</action>
		<action name="tableEdit" class="cn.edu.cup.map.action.TableEditAction">
			<result name="SUCCESS" type="json">				
			</result>			
		</action>
		
	</package>
</struts>
